<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:IDA.App.ViewModels"
             xmlns:models="clr-namespace:IDA.App.Models"
             x:Class="IDA.App.Views.JobOfferPage" x:DataType="viewmodels:JobOfferPageViewModels">
    <ContentPage.Content>


        <StackLayout BackgroundColor="#fff7f7">

            <Frame BorderColor="#aaaaaa" BackgroundColor="#fff7f7" CornerRadius="6" HorizontalOptions="Center" WidthRequest="350" HeightRequest="150">
                <StackLayout>
                    <SearchBar Placeholder="search services" Text="{Binding Services}"/>
                    <CollectionView EmptyView="could not find services"  x:Name="services" ItemsSource="{Binding FilteredServices}" SelectedItem="{Binding SelectedService}" SelectionMode="Single"
                                    SelectionChangedCommand="{Binding SelectServicesCommand}" SelectionChangedCommandParameter="{Binding SelectedService}">
                                   <!--IsVisible="{Binding ShowServicesError}"--> 
                    </CollectionView>


                    <Button Command="{Binding Path=SearchCommand}"></Button>
                </StackLayout>

            </Frame>


            <Frame BorderColor="#aaaaaa" BackgroundColor="#fff7f7" CornerRadius="6" HorizontalOptions="Center" WidthRequest="350" HeightRequest="150">
                <StackLayout>

                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"></RowDefinition>
                            <RowDefinition Height="2*" ></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="500" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <CollectionView  Grid.Row="1" SelectionMode="Single" ItemsSource="{Binding JobOffers}" EmptyView="you have to select service"  >
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:JobOffer">
                                    <Label   VerticalTextAlignment="Center" VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding ChosenWorker.FirstName} " />
                                                <Span Text="{Binding ChosenWorker.LastName} " />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </Grid>


                </StackLayout>

            </Frame>

            <Button Text="see this workers profile" BackgroundColor="#f0d9d7" TextColor="White" CornerRadius="3"  Command="{Binding Path=WorkerPCommand}"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    