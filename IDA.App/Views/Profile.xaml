<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:IDA.App.ViewModels"
             x:Class="IDA.App.Views.Profile">
    <ContentPage.BindingContext>
        <local:ProfileViewModels></local:ProfileViewModels>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#fff7f7">
            <Label Text="profile page"> </Label>
            <Button Text="update your personal details" ></Button>
            <Button Text="moreee" ></Button>
            <Button Text="log out" Command="{Binding LogOutCommand}" ></Button>


            <StackLayout IsVisible="{Binding IsWorker}">

                <Button Text="set as avilable" Command="{Binding AvailbleWorkerCommand}"></Button>
                <Label Text="avilable until"></Label>
                <TimePicker></TimePicker>
                <Button Text="set as unavailble"></Button>
                <Label Text="your status is:"></Label> <Label Text="{Binding IsAvailable }"></Label>
            </StackLayout>

        </StackLayout>

    
        
    </ContentPage.Content>
</ContentPage>