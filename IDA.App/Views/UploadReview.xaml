<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IDA.App.ViewModels"
             x:Class="IDA.App.Views.UploadReview">
 
      
    <ContentPage.Content>
        
        <StackLayout>

            <Label Text="write your review"></Label>

            <Slider Minimum="1" Maximum="5" />
            <Entry Placeholder=""  />
            <ActivityIndicator />

            <Button Text="submit" BackgroundColor="#f0d9d7" TextColor="White" CornerRadius="3" ></Button>

        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>